{
    "openapi": "3.0.0",
    "info":{
        "title": "API Cefit",
        "description": "Descrição da API",
        "contact": {
            "email": "exemplo@exemplo" 
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:5000/v1",
            "description": "API de teste"
        }
    ],
    "paths": {
        "/user/{id}/readOne": {
            "get": {
                "summary": "Ver um usuário pelo id",
                "description": "Essa rota será responsável para visualizar um usuário",
                "tags": ["User"],
                "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "description": "Id para busca",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
                ],
                "security": [{"bearerAuth": []}],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário não cadastrado/Ocorreu um erro",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/readAll":{
            "get": {
                "summary": "Ver todos os usuários",
                "description": "Essa rota é responsável por ver todos os usuários",
                "tags": ["User"],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/User"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Ocorreu um erro ao recuperar a lista de usuários",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/createUser":{
            "post":{
                "summary": "Criar novo usuário",
                "description": "Rota responsável por criar um novo usuário",
                "tags": ["User"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema":{
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "users": {
                                    "value": {
                                        "nome": "Luiz",
                                        "email": "luiz@teste.com",
                                        "birth": "31/05/2003",
                                        "CPF": "12345678910",
                                        "senha": "luizteste123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário cadastrado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Ocorreu um erro ao tentar criar um usuário",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "examples": {
                                    "errorEmail": {
                                        "value": {
                                            "message": "Email já cadastrado",
                                            "error": "ValidationError"
                                        }
                                    },
                                    "errorCPF": {
                                        "value": {
                                            "message": "CPF já cadastrado",
                                            "error": "ValidationError"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/{id}/updateUser": {
            "patch": {
                "summary": "Atualiza usuário",
                "description": "Essa rota é responsável por atualizar um usuário pelo id",
                "tags": ["User"],
                "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "description": "Id do usuário a ser atualizado",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
                ],
                "security": [{"bearerAuth": []}],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário atualizado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/User"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Ocorreu um erro na tentativa da atualização",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/{id}/deleteUser": {
            "delete": {
                "summary": "Deleta usuário",
                "description": "Essa rota é responsável por deletar um usuário através do id",
                "tags": ["User"],
                "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "description": "Id do usuário a ser deletado",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
                ],
                "security": [{"bearerAuth": []}],
                "responses": {
                    "200": {
                        "description": "Usuário deletado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/User"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário não encontrado ou ocorreu um erro na remoção",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "examples": {
                                    "userNotFound": {
                                        "value": {
                                            "message": "User não encontrado",
                                            "error": "UserNotFoundError"
                                        }
                                    },
                                    "deletionError": {
                                        "value": {
                                            "message": "Erro ao tentar deletar user",
                                            "error": "ValidationError"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components":{
        "schemas":{
            "User": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "birth": {
                        "type": "string",
                        "format": "date"
                    },
                    "CPF": {
                        "type": "string"
                    },
                    "senha": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}